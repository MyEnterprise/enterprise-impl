<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!-- Nome da unidade de persistência (pode ser qualquer nome) -->
    <persistence-unit name="my-pu">

        <!-- Provedor de persistência (Hibernate neste exemplo) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Configurações de conexão com o banco de dados -->
        <properties>
            <!-- Configure a unidade de persistência aqui
            <property name="javax.persistence.jdbc.url" value="jdbc:your_database_url"/>
            <property name="javax.persistence.jdbc.user" value="your_database_user"/>
            <property name="javax.persistence.jdbc.password" value="your_database_password"/>
            <property name="javax.persistence.jdbc.driver" value="your_database_driver"/>
            -->
            <!-- Configuração do Hibernate para criar tabelas -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

</persistence>
